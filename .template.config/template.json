{
	"$schema": "http://json.schemastore.org/template",
	"author": "Your Name",
	"identity": "DotnetCustomTemplate",
	"name": ".NET Custom Template",
	"shortName": "custom-template",
	"classifications": [ "Web", "Clean Architecture", "Multi-Project" ],
	"tags": {
		"language": "C#",
		"type": "project"
	},
	"sourceName": "ProjectName",
	"preferNameDirectory": true,

	// Primary project outputs
	"primaryOutputs": [
		{ "path": "ProjectName.Web/ProjectName.Web.csproj" },
		{ "path": "ProjectName.Core/ProjectName.Core.csproj" }
	],

	// Template parameters (symbols)
	"symbols": {
		"appName": {
			"type": "parameter",
			"datatype": "string",
			"replaces": "__appName__",
			"defaultValue": "My Custom App",
			"description": "The name of the application"
		},
		"companyName": {
			"type": "parameter",
			"datatype": "string",
			"replaces": "__companyName__",
			"defaultValue": "Your Company",
			"description": "The name of the company"
		},
		"version": {
			"type": "parameter",
			"datatype": "string",
			"replaces": "__version__",
			"defaultValue": "1.0.0",
			"description": "Version of the project"
		},
		"environment": {
			"type": "parameter",
			"datatype": "string",
			"replaces": "__environment__",
			"defaultValue": "Development",
			"description": "Project environment (e.g., Development, Staging, Production)"
		},
		"description": {
			"type": "parameter",
			"datatype": "string",
			"replaces": "__description__",
			"defaultValue": "A brief description of the project.",
			"description": "Description of the project"
		},
		"author": {
			"type": "parameter",
			"datatype": "string",
			"replaces": "__author__",
			"defaultValue": "Author Name",
			"description": "Author or maintainer of the project"
		},
		"connectionString": {
			"type": "parameter",
			"datatype": "string",
			"replaces": "__connectionString__",
			"defaultValue": "Server=localhost;Database=MyAppDb;User Id=myuser;Password=mypassword;",
			"description": "Configuration connection string"
		}
	},

	// Post-actions for template creation
	"postActions": [
		{
			"actionId": "15f888e3-91f2-46d9-9fd6-57307450439e",
			"description": "Restore NuGet packages",
			"manualInstructions": [ { "text": "Run 'dotnet restore' to install dependencies." } ],
			"continueOnError": true,
			"args": {
				"targetFiles": "ProjectTemplate.sln"
			}
		}
	]
}
